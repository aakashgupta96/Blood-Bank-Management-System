<div class="row white container form hoverable z-depth-5">
  <p class="form_heading">Blood Donation Details</p>

<%= form_for(@blood, class: "col s12") do |f| %>
  
  <div class="row">
    <% if @blood.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@blood.errors.count, "error") %> prohibited this donation from being saved:</h2>

      <ul>
      <% @blood.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    <% end %>

    <div class="input-field col s6">
      <%= f.select :category,["A+", "A-","B+","B-","AB+","AB-","O+","O-"], required: true, default:"A+" %>
    </div>
    <div class="input-field col s6">
      <%= f.label "Blood volume (in ml) " %>
      <%= f.number_field :amount, required: true %>
    </div>

    <div class="input-field col s6">
      <%= f.select :bank_id, options_for_select(Bank.all.collect{ |u| [u.name, u.id] }), required: true %>
    </div>

    <div class="input-field col s12"> 
      <%= f.submit "Submit", class: "btn" %>
    </div>

  </div>

<% end %>