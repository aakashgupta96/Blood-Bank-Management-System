<div class="row white container form hoverable z-depth-5">
  <p class="form_heading">Blood Bank Sign Up</p>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "col s12") do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="input-field col s12">
      <i class="material-icons prefix">account_circle</i>
      <%= f.text_field :username, autofocus: true, required: true, class: "validate" %>
      <%= f.label "Username" %>
    </div>
    <div class="input-field col s6">
      <i class="material-icons prefix">vpn_key</i>
      <%= f.password_field :password, autocomplete: "off", required: true, class: "validate" %>
      <%= f.label "Password" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </div>

    <div class="input-field col s6">
      <i class="material-icons prefix">vpn_key</i>
      <%= f.password_field :password_confirmation, autocomplete: "off", required: true, class: "validate" %>
      <%= f.label "Confirm Password" %>
    </div>

    <div class="input-field col s12">
      <i class="material-icons prefix">mode_edit</i>
      <%= f.label "Blood Bank Name" %>
      <%= f.text_field :name, required: true, class: "validate" %>
    </div>

    <div class="input-field col s6">
    <i class="material-icons prefix">dialpad</i>
      <%= f.text_field :address, required: true %>
      <%= f.label "Address" %>
    </div>

    <div class="input-field col s12"> 
      <%= f.submit "Sign Up", class: "btn" %>
    </div>

  </div>

<% end %>

